@model IEnumerable<Ops.Models.Storm>

@{
    ViewBag.Title = "Index";
}

<div id="page-wrapper">
  <div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
      <h1 class="page-header">Employee</h1>
    </div>
    <!--End Page Header -->
  </div>
  <div class="row">
    <div class="col-lg-8">
      <!--Simple table example -->
      <div class="panel panel-primary">
        <div class="panel-heading">
          <i class="fa fa-bar-chart-o fa-fw"></i>Employee
          <div class="pull-right">
            <div class="btn-group">
              <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                Actions
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu pull-right" role="menu">
                <li>
                  <a href="/employees/create">Add</a>
                </li>
                <li>
                  <a href="/employees/edit">Edit</a>
                </li>
                <li>
                  <a href="javascript:confirm('Are you sure you want to delete the selected items?')">Delete</a>
                </li>
                <li class="divider"></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                  <thead>
                    <tr>
                      <th></th>
                      <th>#</th>
                      <th>First Name</th>
                      <th>Last Name</th>
                    </tr>
                  </thead>
                  <tbody>
                  @foreach (var item in Model)
                  {
                    <tr>
                      <td><input type="checkbox" /></td>
                      <td>@item.ID</td>
                      <td>@item.Name</td>
                      <td>@item.Link</td>
                    </tr>
                  }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- /.row -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!--End simple table example -->
    </div>
  </div>
</div>

